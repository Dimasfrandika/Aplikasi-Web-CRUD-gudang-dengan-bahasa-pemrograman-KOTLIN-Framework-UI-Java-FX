<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane stylesheets="@/css/login.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">

    <!-- Background -->
    <Pane styleClass="background" />

    <!-- CENTER WRAPPER -->
    <VBox alignment="CENTER">

        <!-- LOGIN CARD -->
        <VBox alignment="CENTER" maxWidth="420" prefHeight="499.0" prefWidth="420" spacing="18" styleClass="login-card">


            <ImageView cache="true" fitWidth="85" preserveRatio="true">
                <image>
                    <Image url="@/images/gambar.png" />
                </image>
            </ImageView>

            <Label styleClass="title" text="Selamat Datang" />

            <Label styleClass="subtitle" text="Silakan login untuk melanjutkan" />

            <TextField fx:id="emailField" prefHeight="40.0" prefWidth="302.0" promptText="Email" styleClass="input" />

            <!-- PASSWORD + TOGGLE -->
            <HBox alignment="CENTER" spacing="6">

                <PasswordField fx:id="passwordField" prefHeight="40" prefWidth="317.0" promptText="Password" styleClass="input" />

                <TextField fx:id="passwordTextField" managed="false" prefHeight="40" prefWidth="300" promptText="Password" styleClass="input" visible="false" />
   
                   <Button fx:id="togglePassword" onAction="#handleTogglePassword" prefHeight="34.0" prefWidth="56.0" styleClass="toggle-button" text="ðŸ‘" />
            </HBox>

            <Button fx:id="loginButton" onAction="#handleLogin" styleClass="login-button" text="LOGIN" />

            <HBox alignment="CENTER" spacing="6">
                <Label styleClass="footer-text" text="Belum punya akun?" />
                <Hyperlink onAction="#handleRegister" styleClass="register-link" text="Register" />
            </HBox>

        </VBox>
    </VBox>

</StackPane>
